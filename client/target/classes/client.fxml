<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox  xmlns:fx="http://javafx.com/fxml/1" fx:controller="netstorage.client.Controller">
    <MenuBar>
        <Menu text="Программа">
            <MenuItem onAction="#exitAction" text="Выйти из программы" />
        </Menu>
    </MenuBar>
   <ListView fx:id="listView" prefHeight="200.0" onMousePressed="#onMousePresset" prefWidth="200.0" />
    <HBox>
        <TextField fx:id="msgField" onAction="#sendMsgAction" promptText="Введите сообщение..." HBox.hgrow="ALWAYS" />
        <Button onAction="#sendMsgAction" text="Отправить" />
    </HBox>
</VBox>
